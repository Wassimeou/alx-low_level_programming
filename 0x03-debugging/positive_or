#include "main.h"

/**
 * main - Determine if anmuber is positive, negative or zero
 * 0 : is the numbre to be checked
 * Return: 0 on sucess
 */

void positive_or_negative(int i)
{
	if (i < 0)
	{
		printf("%d is %s\n", i, "negative");
	}
	else if (i > 0)
	{
		printf("%d is %s\n", i, "positive");
	}
	else
	{
		printf("%d is %s\n", i, "zero");
	}
	return;
}
